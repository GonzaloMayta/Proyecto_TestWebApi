@model WebApp.FrontEnd.Models.Movimientos

@{
    ViewData["Title"] = "Movimientos";
}

<h1>Movimientos</h1>

<h4>Movimientos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Movimientos" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroCuenta" class="control-label"></label>
                <input asp-for="NroCuenta" class="form-control" placeholder="Ingrese Numero de cuenta" />
                <span asp-validation-for="NroCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" placeholder="Monto de Deposito o Retiro"/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Deposito" class="btn btn-primary" />
                <!--<input type="submit" value="Retiro" class="btn btn-primary" />-->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
